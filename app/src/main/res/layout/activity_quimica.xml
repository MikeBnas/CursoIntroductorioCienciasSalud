<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quimica">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sectionquim"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="#3F99E3"
                android:text="Quimica \n Resumen de la seccion"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/sectionquimcont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bio_resume"
                android:visibility="gone" />

            <TextView
                android:id="@+id/contentquim"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="#3F99E3"
                android:paddingTop="2dp"
                android:layout_marginTop="2dp"
                android:text="Quimica \n Contenidos de la seccion"
                android:textAlignment="center"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/contentquimcont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quim_cont"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonquim"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="Leer Manual Quimica Preuniversitaria" />

            <Button
                android:id="@+id/buttontab"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="Ver Tabla Periodica" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>